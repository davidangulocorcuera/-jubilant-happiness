<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="button" parent="bold">
        <item name="android:textSize">@dimen/medium_big_font</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/round_button_shape</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <style name="transparent_button" parent="button">
        <item name="android:background">@drawable/selector_row</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="roundButton" parent="button">
        <item name="android:background">@drawable/round_button</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/dark_blue</item>
    </style>

    <style name="roundWhiteButton" parent="button">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/round_white_button</item>
    </style>

    <style name="no_data">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_font</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">@dimen/tab_indicator_size</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="tabPaddingStart">@dimen/tab_padding</item>
        <item name="tabPaddingEnd">@dimen/tab_padding</item>
        <item name="tabBackground">?attr/colorPrimaryDark</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <!-- for text -->

    <style name="card" parent="Clickable">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/space_medium_big</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>


    <style name="TextAppearance.Design.CollapsingToolbar.Expanded.Shadow">
        <item name="android:shadowDy">0</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">8</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="Image">
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="Clickable">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Image.ServiceButton" parent="Image">
        <item name="android:padding">@dimen/space_smaller</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="transparent_button_regular" parent="button">
        <item name="android:textSize">@dimen/medium_font</item>
        <item name="android:background">@drawable/selector_row</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="error">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_standard</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/space_standard</item>
    </style>

</resources>
