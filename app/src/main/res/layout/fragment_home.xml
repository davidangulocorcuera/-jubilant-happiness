<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".modules.home.homeFragment.HomeFragment"
        android:id="@+id/drawerLayout"
        android:orientation="vertical"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".modules.home.homeFragment.HomeFragment"
            android:orientation="vertical"

    >
        <include layout="@layout/toolbar"/>
        <include layout="@layout/view_separator"/>


        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/space_big"
            >


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="center"
                >
                    <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/space_medium"
                            style="@style/card"
                            android:layout_width="@dimen/regular_card"
                            android:layout_height="110dp"
                            app:cardCornerRadius="2dp"
                            android:elevation="@dimen/space_medium"
                            android:id="@+id/cvFilterByCountry"

                    >
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/materialOrange600"
                        >

                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/ic_map"
                                       android:layout_marginBottom="@dimen/space_medium"
                                       app:layout_constraintBottom_toTopOf="@+id/tvFilterByCountry"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginTop="@dimen/space_big"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/title"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/country"
                                    android:id="@+id/tvFilterByCountry"
                                    android:layout_marginBottom="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/space_medium"
                            style="@style/card"
                            android:layout_width="@dimen/regular_card"
                            android:layout_height="110dp"
                            app:cardCornerRadius="2dp"
                            android:elevation="@dimen/space_medium"
                            android:id="@+id/cvFilterByCity"


                    >
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/materialBlue600"
                        >
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/ic_city"
                                       android:layout_marginBottom="@dimen/space_medium"
                                       app:layout_constraintBottom_toTopOf="@+id/tvFilterByCity"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginTop="@dimen/space_big"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/title"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/city"
                                    android:id="@+id/tvFilterByCity"
                                    android:layout_marginBottom="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="center"
                >
                    <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/space_medium"
                            style="@style/card"
                            android:layout_width="@dimen/regular_card"
                            android:layout_height="110dp"
                            app:cardCornerRadius="2dp"
                            android:elevation="@dimen/space_medium"
                            android:id="@+id/cvFilterByPostalCode"


                    >
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/materialPink600"
                        >
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/ic_hood"
                                       android:layout_marginBottom="@dimen/space_medium"
                                       app:layout_constraintBottom_toTopOf="@+id/tvFilterByPostalCode"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginTop="@dimen/space_big"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/title"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/postal_code"
                                    android:id="@+id/tvFilterByPostalCode"
                                    android:layout_marginBottom="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/space_medium"
                            style="@style/card"
                            android:layout_width="@dimen/regular_card"
                            android:layout_height="110dp"
                            app:cardCornerRadius="2dp"
                            android:elevation="@dimen/space_medium"
                            android:id="@+id/cvRandomUsers"


                    >
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/materialGreen600"
                        >
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/ic_random"
                                       android:layout_marginBottom="@dimen/space_medium"
                                       app:layout_constraintBottom_toTopOf="@+id/tvRandomUsers"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginTop="@dimen/space_big"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/title"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/random_users"
                                    android:id="@+id/tvRandomUsers"
                                    android:layout_marginBottom="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="center"
                >
                    <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/space_medium"
                            style="@style/card"
                            android:layout_width="@dimen/regular_card"
                            android:layout_height="110dp"
                            app:cardCornerRadius="2dp"
                            android:elevation="@dimen/space_medium"
                            android:id="@+id/cvFilterByJob"


                    >
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/default_bg_color"
                        >
                            <ImageView android:layout_width="18dp"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/ic_euro"
                                       android:layout_marginBottom="@dimen/space_medium"
                                       app:layout_constraintBottom_toTopOf="@+id/tvFilterByJob"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginTop="@dimen/space_big"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/title"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/job"
                                    android:id="@+id/tvFilterByJob"
                                    android:layout_marginBottom="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_margin="@dimen/space_medium"
                            style="@style/card"
                            android:layout_width="@dimen/regular_card"
                            android:layout_height="110dp"
                            app:cardCornerRadius="2dp"
                            android:elevation="@dimen/space_medium"
                            android:id="@+id/cvFilterByUniversity"


                    >
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/materialRed800"
                        >
                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:src="@drawable/ic_university"
                                       android:layout_marginBottom="@dimen/space_medium"
                                       app:layout_constraintBottom_toTopOf="@+id/tvUniversity"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       android:layout_marginTop="@dimen/space_big"
                                       app:layout_constraintTop_toTopOf="parent"/>

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/title"
                                    android:gravity="center"
                                    android:textColor="@color/white"
                                    android:text="@string/university"
                                    android:id="@+id/tvUniversity"
                                    android:layout_marginBottom="28dp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:layout_marginStart="8dp"
                                    app:layout_constraintStart_toStartOf="parent"
                            />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/menuNavigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/view_drawer_menu_header"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="130dp"
        >

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewDrawerMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:nestedScrollingEnabled="false"
                    tools:targetApi="lollipop"/>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>