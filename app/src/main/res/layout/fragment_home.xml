<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:tools="http://schemas.android.com/tools"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           tools:context=".modules.home.homeFragment.HomeFragment"
                                           android:id="@+id/drawerLayout"
                                           android:orientation="vertical"

>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".modules.home.homeFragment.HomeFragment"
            android:orientation="vertical"

    >
        <include layout="@layout/toolbar"/>
        <include layout="@layout/view_separator"/>


        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent"
        >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:layout_marginTop="@dimen/space_big"
            >


                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="center"
                >
                    <include
                            layout="@layout/item_filter_people"
                            android:id="@+id/filterByCountryContainer"
                    />
                    <include
                            layout="@layout/item_filter_people"
                            android:id="@+id/filterByCityContainer"
                    />


                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:layout_gravity="center"
                >
                    <include
                            layout="@layout/item_filter_people"
                            android:id="@+id/filterByPostalCodeContainer"
                    />
                    <include
                            layout="@layout/item_filter_people"
                            android:id="@+id/randomContainer"
                    />


                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
            android:id="@+id/menuNavigation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/view_drawer_menu_header"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="130dp"
        >

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewDrawerMenu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:nestedScrollingEnabled="false"
                    tools:targetApi="lollipop"/>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>