<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".modules.login.LoginFragment"
        android:id="@+id/loginFragment"
        android:orientation="vertical"
        android:padding="@dimen/space_medium"
        android:background="@color/white"

>


    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center_vertical"


        >
            <ImageView android:layout_width="@dimen/header_big"
                       android:layout_height="100dp"
                       android:src="@drawable/ic_logo"
                       android:layout_gravity="center"
                       android:layout_marginBottom="@dimen/space_big"
                       android:tint="@color/colorPrimary"

            />
            <android.support.design.widget.TextInputLayout
                    style="@style/input"
                    android:id="@+id/tiEmail"
                    android:layout_marginStart="@dimen/space_big"
                    android:layout_marginEnd="@dimen/space_big"
                    android:layout_marginBottom="@dimen/space_big"

            >
                <EditText
                        android:id="@+id/etEmail"
                        style="@style/edit_validator"
                        android:hint="@string/e_mail"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    style="@style/input"
                    android:id="@+id/tiPassword"
                    android:layout_marginBottom="@dimen/space_biggest"
                    android:layout_marginStart="@dimen/space_big"
                    android:layout_marginEnd="@dimen/space_big"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorPrimary"


            >
                <EditText
                        android:id="@+id/etPassword"
                        style="@style/edit_validator"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                />
            </android.support.design.widget.TextInputLayout>

            <Button android:layout_width="200dp"
                    android:layout_height="46dp"
                    android:text="@string/login"
                    android:enabled="false"
                    style="@style/button"
                    android:layout_gravity="center"
                    android:id="@+id/btnLogin"
                    android:layout_marginTop="@dimen/space_big"
                    android:layout_marginBottom="20dp"
            />

            <Button android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="@string/register"
                    style="@style/transparent_button"
                    android:id="@+id/btnRegister"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>