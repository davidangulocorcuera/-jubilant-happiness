<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent" android:layout_height="match_parent"
              tools:context=".modules.register.RegisterFragment"
              android:id="@+id/registerFragment"
              android:background="@color/white"
              android:orientation="vertical"


>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:fadeScrollbars="false"
    >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginTop="@dimen/space_big"
                      android:padding="@dimen/space_medium"
                      android:layout_gravity="center"
        >

            <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/input"
                    android:id="@+id/tiName"
            >
                <EditText
                        android:id="@+id/etName"
                        style="@style/edit_validator"
                        android:hint="@string/name"
                />
            </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_big">

                <android.support.design.widget.TextInputLayout
                        android:id="@+id/tiBirthday"
                        style="@style/input">

                    <EditText
                            android:id="@+id/etBirthday"
                            android:enabled="false"
                            style="@style/edit_validator"
                            android:hint="@string/birthday"
                            android:inputType="date"/>


                </android.support.design.widget.TextInputLayout>

                <ImageView
                        android:id="@+id/ivOpenCalendar"
                        android:layout_width="wrap_content"
                        style="@style/Clickable"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/space_small"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/grey"/>
            </RelativeLayout>

            <android.support.design.widget.TextInputLayout
                    android:layout_margin="10dp"
                    style="@style/input"
                    android:id="@+id/tiEmail"
            >
                <EditText
                        android:id="@+id/etEmail"
                        style="@style/edit_validator"
                        android:hint="@string/e_mail"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiPassword"
                    android:layout_margin="10dp"
                    style="@style/input"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/grey"
            >
                <EditText
                        android:id="@+id/etPassword"
                        style="@style/edit_validator"
                        android:hint="@string/password"
                        android:inputType="textPassword"
                />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                    android:id="@+id/tiPasswordRepeat"
                    android:layout_margin="10dp"
                    style="@style/input"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/grey"
            >
                <EditText
                        android:id="@+id/etPasswordRepeat"
                        style="@style/edit_validator"
                        android:hint="@string/validate_password"
                        android:inputType="textPassword"
                />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          android:padding="@dimen/space_small"
                          android:layout_margin="@dimen/space_medium"
            >
                <TextView
                        android:id="@+id/tvSexTitle"
                        style="@style/title"
                        android:layout_marginStart="@dimen/space_medium"
                        android:textColor="@color/colorAccent"
                        android:text="@string/gender"
                />

                <RadioGroup
                        android:id="@+id/rgGender"
                        android:layout_margin="10dp"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/space_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbMale"
                            style="@style/semi_bold"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/male"/>

                    <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbFemale"
                            style="@style/semi_bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/space_small"
                            android:text="@string/female"/>

                    <android.support.v7.widget.AppCompatRadioButton
                            android:id="@+id/rbNone"
                            style="@style/semi_bold"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginStart="@dimen/space_small"
                            android:text="@string/other"/>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center"
                          android:layout_marginBottom="@dimen/space_medium" android:padding="@dimen/space_small"
            >

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/transparent_button"
                        android:id="@+id/btnBack"
                        android:layout_margin="10dp"
                        android:text="@string/back"
                        android:textColor="@color/red"
                />

                <Button android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/roundButton"
                        android:id="@+id/btnNext"
                        android:enabled="false"
                        android:layout_margin="10dp"
                        android:text="@string/next"

                />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>