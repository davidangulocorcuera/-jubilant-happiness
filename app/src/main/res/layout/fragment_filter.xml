<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".modules.filter.FilterFragment"
             android:id="@+id/contentFragment"
              android:orientation="vertical"

>
    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                        android:orientation="vertical"
                      android:layout_marginTop="@dimen/space_big"
        >


            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center"
            >
                <include
                        layout="@layout/item_filter_people"
                        android:id="@+id/filterByCountryContainer"
                />
                <include
                        layout="@layout/item_filter_people"
                        android:id="@+id/filterByCityContainer"
                />


            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center"
            >
                <include
                        layout="@layout/item_filter_people"
                        android:id="@+id/filterByPostalCodeContainer"
                />
                <include
                        layout="@layout/item_filter_people"
                        android:id="@+id/randomContainer"
                />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>