        <shape>
            <solid android:color="@color/dark_white" />
            <stroke android:width="1dp" android:color="@color/colorAccent" />
            <corners android:radius="4dp" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />
