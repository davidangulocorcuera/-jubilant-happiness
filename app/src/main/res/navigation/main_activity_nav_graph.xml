<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"

            android:id="@+id/login_register_nav_graph" app:startDestination="@id/loginFragment">
    <fragment android:id="@+id/loginFragment"
              android:name="com.example.justfivemins.modules.login.LoginFragment"
              android:label="fragmentLogin"
              tools:layout="@layout/fragment_login">

        <action android:id="@+id/goToLocation"
                app:destination="@id/locationFragment"/>

        <action android:id="@+id/goToRegister"
                app:destination="@id/registerFragment"
        />
    </fragment>

    <fragment android:id="@+id/registerFragment"
              android:name="com.example.justfivemins.modules.register.RegisterFragment"
              android:label="fragmentRegister"
              tools:layout="@layout/fragment_register">
        <action android:id="@+id/goToLocation"
                app:destination="@id/locationFragment"/>

    </fragment>

    <fragment android:id="@+id/locationFragment"
              android:name="com.example.justfivemins.modules.map.LocationFragment"
              android:label="fragmentLocation"
              tools:layout="@layout/fragment_location"
    >
        <action android:id="@+id/goToDownloadFragment"
                app:destination="@id/downloadDataFragment" app:launchSingleTop="false"/>
    </fragment>

    <fragment android:id="@+id/downloadDataFragment"
              android:name="com.example.justfivemins.downloadingDataScreen.DownloadDataFragment"
              android:label="DownloadDataFragment"
              tools:layout="@layout/fragment_download_data">


    </fragment>

</navigation>